{
  "name": "<%= PROJECT_NAME %>",
  "description": "<%= PROJECT_DESCRIPTION %>",
  "author": "BlueEast Team <code@blueeast.com>",
  "version": "0.0.1",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "repository": "https://github.com/<%= GIT_ORG %>/<%= GIT_REPO %>",
  "license": "MIT",
  "keywords": [],
  "config": {},
  "remarkConfig": {
    "plugins": ["remark-preset-lint-recommended"]
  },
  "size-limit": [
    {
      "limit": "3 KB",
      "webpack": false,
      "path": "dist/**/*.js"
    }
  ],
  "scripts": {
    "start": "yarn run storybook",
    "clean": "rimraf coverage dist tmp",
    "watch": "tsc -w -p tsconfig.json",
    "watch:test": "jest --watch",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "build": "run-s clean && run-p build:* && cp -r ./dist/src/* ./dist && rm -r ./dist/src && yarn run size",
    "build:main": "tsc -p tsconfig.json && babel ./src --out-dir dist --ignore \"**/__tests__\",\"**/__stories__\" --extensions \".ts,.tsx,.js,.jsx\"",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "fix:md": "remark . -o",
    "test": "run-s build test:*",
    "test:only": "jest --coverage",
    "test:lint": "npm run lint",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:md": "remark . -f",
    "report-coverage": "codecov && cat ./coverage/lcov.info | codacy-coverage",
    "doc": "run-s doc:html && run-s doc:build-storybook",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs && cp -r assets docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json docs/typedoc.json && cp -r assets docs",
    "doc:build-storybook": "build-storybook -c ./bluebase/storybook/configs -o docs/storybook",
    "prepublishOnly": "yarn remove expo react-native",
    "size": "size-limit"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "react-native": "^0.59.8",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@bluebase/cli-essentials": "^0.0.5",
    "@bluebase/code-standards": "^2.2.4",
    "@bluebase/storybook-addon": "^3.0.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-async-helpers": "^0.9.1",
    "@types/jest": "^24.0.9",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/react-loadable": "^5.5.0",
    "@types/react-native": "^0.57.7",
    "@types/react-test-renderer": "^16.8.1",
    "@types/storybook__addon-info": "^4.1.0",
    "@types/storybook__addon-knobs": "^5.0.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "babel-preset-expo": "^7.0.0",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-async-helpers": "^0.9.1",
    "jest": "^24.3.1",
    "jest-enzyme": "^7.0.2",
    "jsdom": "^16.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "^16.8.4",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.2",
    "schedule": "^0.5.0",
    "size-limit": "^0.21.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "@bluebase/core": "^5.0.2",
    "react": "^16.9.0"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  }
}
